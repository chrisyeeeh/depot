<h1>Listing products</h1>


<table class="table table-hover">
 
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= image_tag(product.image_url, class:'list_image') %>
          
        </td>

        <td class ="list_description">
          <dl>
            <dt><%= product.title %></dt>
            <dd><%= truncate(strip_tags(product.description), length:180) %></dd>
          </dl>

          <td class = "list_actions">
            <%= link_to 'Show', product, class: "btn btn-default btn-xs" %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn btn-default btn-xs" %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %>
          </td>
        </tr>


    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-default" %>
